    "dotenv": "^16.0.0",
    "firebase-admin": "^10.0.2",
    "firebase-functions": "^3.21.2",
    "graphql": "^16.4.0",
    "graphql-request": "^4.2.0",
    "node-fetch": "^2.6.7",
    "typescript": "^4.6.4"
  },
  "devDependencies": {
    "eslint": "^8.9.0",
